{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "hardhat.config.ts",
    "./test",
    "./src",
    "./scripts",
    "ignition"
  ],
  "exclude": [
    "node_modules"
  ]
}
